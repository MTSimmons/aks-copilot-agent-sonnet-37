{
  "name": "azure-openai-chat",
  "version": "1.0.0",
  "description": "Elegant chat application using Azure OpenAI",
  "main": "server.js",
  "type": "module",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "build": "npm run build-client",
    "build-client": "cd client && npm install && npm run build",
    "docker-build": "docker build -t azure-openai-chat .",
    "docker-run": "docker run -p 3000:3000 --env-file .env azure-openai-chat"
  },
  "dependencies": {
    "axios": "^1.6.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "morgan": "^1.10.0",
    "openai": "^4.17.4"
  },
  "devDependencies": {
    "nodemon": "^3.0.1"
  }
}